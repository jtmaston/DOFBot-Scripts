#:import utils kivy.utils
<MenuButton@MDRaisedButton>:
    theme_text_color: "Custom"
    text_color: 0, 0, 0, 1
    md_bg_color: utils.get_color_from_hex("FEBE0C")


GridLayout:
    rows: 3
    cols: 1

    GridLayout:
        rows: 1
        cols: 4
        spacing: 30
        padding: 30
        size_hint_x: 1
        size_hint_y: 0.1

        MenuButton:
            size_hint_x: .20
            size_hint_y: 1
            text: "Mod învățare"

        MenuButton:
            size_hint_x: .20
            size_hint_y: 1
            text: "Urmărește obiect"

        MenuButton:
            size_hint_x: .20
            size_hint_y: 1
            text: "Recunoaște obiect"

        MenuButton:
            size_hint_x: .20
            size_hint_y: 1
            text: "STOP"

    GridLayout:
        size_hint_x: 1
        size_hint_y: 0.5
        rows: 1
        cols: 3
        GridLayout:
            size_hint_x: 0.3
            size_hint_y: 1
            rows: 5
            cols: 2
            padding: 10
            MDLabel:
                color: utils.get_color_from_hex("FEBE0C")
                size_hint_x: 0.3
                text: "Rotația bazei: "

            MDSlider:
                size_hint_x: 0.7
                id: ax1
                min: -90
                max: 90
                value: 0
                hint: True
                color: app.theme_cls.accent_color

            MDLabel:
                color: utils.get_color_from_hex("FEBE0C")
                size_hint_x: 0.3
                text: "Axa 2: "

            MDSlider:
                size_hint_x: 0.7
                id: ax2
                min: -90
                max: 90
                value: 0
                hint: True
                color: app.theme_cls.accent_color

            MDLabel:
                color: utils.get_color_from_hex("FEBE0C")
                size_hint_x: 0.3
                text: "Axa 3: "

            MDSlider:
                size_hint_x: 0.7
                id: ax3
                min: -90
                max: 90
                value: 0
                hint: True
                color: app.theme_cls.accent_color

            MDLabel:
                color: utils.get_color_from_hex("FEBE0C")
                size_hint_x: 0.3
                text: "Axa 4: "

            MDSlider:
                size_hint_x: 0.7
                id: ax4
                min: -90
                max: 90
                value: 0
                hint: True
                color: app.theme_cls.accent_color

            MDLabel:
                color: utils.get_color_from_hex("FEBE0C")
                size_hint_x: 0.3
                text: "Axa 5: "

            MDSlider:
                size_hint_x: 0.7
                id: ax5
                min: -90
                max: 90
                value: 0
                hint: True
                color: app.theme_cls.accent_color

        BoxLayout:
            size_hint_y: 1
            size_hint_x: 0.7

            Camera:
                size_hint_y: 1
                padding: 0
                id: camera
                resolution: (1280, 720)
                play: True
                allow_stretch: True
                keep_ratio: False

        GridLayout:
            rows: 5
            cols: 0
            padding:20
            size_hint_x: 0.1
            size_hint_y: 1

            MDLabel:
                color: utils.get_color_from_hex("FEBE0C")
                id: ax1_readout
                text: "Axa 1: "

            MDLabel:
                color: utils.get_color_from_hex("FEBE0C")
                id: ax2_readout
                text: "Axa 2: "

            MDLabel:
                color: utils.get_color_from_hex("FEBE0C")
                id: ax3_readout
                text: "Axa 3: "

            MDLabel:
                color: utils.get_color_from_hex("FEBE0C")
                id: ax4_readout
                text: "Axa 4: "

            MDLabel:
                color: utils.get_color_from_hex("FEBE0C")
                id: ax5_readout
                text: "Axa 5: "

    BoxLayout:
        size_hint_x: 1
        size_hint_y: 0.3

